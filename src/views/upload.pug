extends base

block content 
    div.upload__video
        video#preview 
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    div.upload__container
        form(method="post", enctype="multipart/form-data").upload__form
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            input(name="title", placeholder="Title", required, type="text", maxlength=20)
            input(name="description", placeholder="Description", required, type="text", maxlength=80)
            input(name="hashtags", placeholder="HashTags Seperate by comma", required, type="text")
            input(type="submit", value="Upload Video")            
    block scripts 
        script(src="/assets/js/recorder.js") 