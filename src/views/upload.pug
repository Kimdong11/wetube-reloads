extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="post", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title", placeholder="Title", required, type="text", maxlength=20)
        input(name="description", placeholder="Description", required, type="text", maxlength=80)
        input(name="hashtags", placeholder="HashTags Seperate by comma", required, type="text")
        input(type="submit", value="Upload Video")
    